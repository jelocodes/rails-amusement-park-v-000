<h1><%= @attraction.name %></h1>

<% if @user.admin %>
  <%= link_to 'Edit Attraction', edit_attraction_path %>
<% else %>
  <%= form_for @user, method: :patch do |f| %>
    <%= hidden_field 'ride', 'take_ride' %>
    <%= hidden_field 'ride', 'attraction_id' %>
    <%= f.button 'Go on this ride' %>
  <% end %>
<% end %>
